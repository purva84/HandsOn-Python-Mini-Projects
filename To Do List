tasks = []
completed_tasks = []  # Renamed to avoid conflict

def add_task():
    new_task = input("Enter a new task: ").strip()
    tasks.append(new_task)
    print("âœ… Task added successfully!")

def view_task():
    if not tasks:
        print("ğŸ“Œ No pending tasks!")
    else:
        print("\nğŸ“‹ Your To-Do List:")
        for idx, task in enumerate(tasks, start=1):
            print(f"{idx}. {task}")

def mark_completed():
    if not tasks:
        print("ğŸ“Œ No tasks available to mark as completed.")
        return
    
    view_task()
    try:
        which_task = int(input("Enter task number to mark as completed: ")) - 1
        if 0 <= which_task < len(tasks):
            completed_tasks.append(tasks.pop(which_task))
            print("âœ… Task marked as completed!")
        else:
            print("âŒ Invalid task number.")
    except ValueError:
        print("âŒ Please enter a valid number.")

def remove_task():
    if not tasks:
        print("ğŸ“Œ No tasks available to remove.")
        return
    
    view_task()
    try:
        which_remove = int(input("Enter task number to remove: ")) - 1
        if 0 <= which_remove < len(tasks):
            removed_task = tasks.pop(which_remove)
            print(f"âŒ Task '{removed_task}' removed successfully!")
        else:
            print("âŒ Invalid task number.")
    except ValueError:
        print("âŒ Please enter a valid number.")

def view_completed():
    if not completed_tasks:
        print("ğŸ“Œ No completed tasks yet.")
    else:
        print("\nâœ… Completed Tasks:")
        for i, task in enumerate(completed_tasks, start=1):
            print(f"{i}. {task}")

# Display menu
print("------------------------------------------")
print("\t\tğŸ“‹ TO-DO LIST")
print("------------------------------------------")
print("1ï¸âƒ£ Add a new task")
print("2ï¸âƒ£ View all tasks")
print("3ï¸âƒ£ Mark a task as completed")
print("4ï¸âƒ£ Remove a task")
print("5ï¸âƒ£ View completed tasks")
print("6ï¸âƒ£ Exit")
print("------------------------------------------")

while True:
    choose = input("\nChoose an option: ").strip()
    if choose == "1":
        add_task()
    elif choose == "2":
        view_task()
    elif choose == "3":
        mark_completed()
    elif choose == "4":
        remove_task()
    elif choose == "5":
        view_completed()
    elif choose == "6":
        print("ğŸ‘‹ Thank you for using the To-Do List!")
        break
    else:
        print("âŒ Please choose a valid option (1-6).")
